---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import { env } from "@/types/env.ts";
import Icon from "@/components/Icon.astro";
import heartSvg from "@phosphor-icons/core/assets/regular/heart.svg?raw";
import Card from "../components/Card.astro";

export const prerender = env.TEST_PAGE;

const pageTitle = "Test Page";
---

<Layout pageTitle={pageTitle}>
  <Icon rawSvg={heartSvg} class="astro-icon" title="Favorites" width="48" height="48" />
  <Icon rawSvg={heartSvg} title="Favorites" width="48" height="48" />
  <Card>Test</Card>
  <Card width="20%" backgroundColor="var(--callout-success)">Test Attributes</Card>
</Layout>

<style>
  :global(.astro-icon) {
    color: red;
  }
</style>
