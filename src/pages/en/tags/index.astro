---
import Layout from '../../../layouts/Layout.astro'
import { getCollection } from 'astro:content'
import type { CollectionEntry } from 'astro:content'
import { buildTagPath, getLangFromUrl } from '../../../i18n/utils'

const allPosts: CollectionEntry<'blog'>[] = await getCollection('blog', (entry) => entry.id.startsWith('en/'))

const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())]
const pageTitle = 'Tag Index';
const lang = getLangFromUrl(Astro.url);

const defaultDescription = 'The tag index page'
---

<Layout pageTitle={pageTitle} description={defaultDescription} >
  <h1>{pageTitle}</h1>
  <nav aria-label="Tags">
    <ul class="tags">
      {tags.map((tag) => (
        <li class="tag">
          <a href={buildTagPath(lang, tag)}>{tag}</a>
        </li>
      ))}
    </ul>
  </nav>
</Layout>

<style>
  a {
    color: #00539f;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .tag {
    margin: 0;
    border: dotted 1px #a1a1a1;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.15em;
    background-color: #f8fcfd;
  }
</style>
