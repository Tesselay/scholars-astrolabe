---
import Layout from '../../layouts/Layout.astro';
import BlogPost from "../../components/BlogPost.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
    const allPosts: CollectionEntry<'blog'>[] = await getCollection('blog');
    const uniqueTags = [...new Set(allPosts.map((post) => post.data.tags).flat())];

    return uniqueTags.map((tag: string) => {
        const filteredPosts: CollectionEntry<'blog'>[] = allPosts.filter((post) => post.data.tags.includes(tag));
        return {
            params: { tag },
            props: { posts: filteredPosts }
        }
    })
}

const { tag } = Astro.params as { tag: string };
const { posts } = Astro.props as { posts: CollectionEntry<'blog'>[] };
---

<Layout pageTitle={tag}>
    <p>Posts tagged with {tag}</p>
    <ul>
        {posts.map((post) => <BlogPost url=`/posts/${post.id}` title={post.data.title} />)}
    </ul>
</Layout>