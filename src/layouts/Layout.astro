---
import '../styles/global.css'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
const {
  pageTitle = 'Scholar\'s Astrolabe',
  description = 'A page on Scholar\'s Astrolabe',
  ogType = 'website',
  ogImage,
} = Astro.props

import {
  getLangFromUrl,
  stripLangFromUrlOrId,
  pathWithLocale,
  getAlternateLocales
} from "../i18n/utils";
import { defaultLang, ogLocales } from "../i18n/ui";

const lang = getLangFromUrl(Astro.url);
const base = Astro.site ?? Astro.url.origin;
const neutralPath = stripLangFromUrlOrId(Astro.url.pathname);

const canonicalUrl = new URL(pathWithLocale(lang, neutralPath), base).href;
const xDefaultUrl = base + pathWithLocale(defaultLang, neutralPath);
const alternates = getAlternateLocales(Astro.url).map((l) => ({
  hreflang: l,
  href: base + pathWithLocale(l, neutralPath),
  ogLocale: ogLocales[l],
}));

const ogLocale = ogLocales[lang] ?? ogLocales[defaultLang];

const robotsContent = import.meta.env.PROD ? 'index, follow' : 'noindex, nofollow';
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <!-- Canonical and Alternates -->
    <link rel="canonical" href={canonicalUrl} />
    <link rel="alternate" hreflang="x-default" href={xDefaultUrl} />
    {alternates.map((alt) => (
      <link rel="alternate" hreflang={alt.hreflang} href={alt.href} />
    ))}

    <!-- Basic SEO Defaults -->
    <title>{pageTitle}</title>
    <meta name="description" content={description} />

    <!-- Open Graph Defaults -->
    <meta property="og:site_name" content="Scholar's Astrolabe" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:type" content={ogType} />
    <meta property="og:locale" content={ogLocale} />
    {alternates.map((alt) => (
      <meta property="og:locale:alternate" content={alt.ogLocale} />
    ))}
    <meta property="og:description" content={description} />
    {ogImage && <meta property="og:image" content={ogImage} />}

    <!-- Socials -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />

    <!-- Icons -->
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <!-- PWA/UI -->
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#ffffff" />
    <meta name="color-scheme" content="light dark">

    <!-- Optional Policies/Perf -->
    <meta name="referrer" content="strict-origin-when-cross-origin" />
    <meta name="robots" content={robotsContent} />
    {/* <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin /> */}
    {/* <link rel="preload" as="font" type="font/woff2" href="/fonts/YourFont.woff2" crossorigin> */}

    <!-- Page Specific -->
    <slot name="head" />

    <!-- Auto -->
  </head>
  <body>
    <a href="#main" class="skip-link">Skip to main content</a>
    <Header />
    <main id="main">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  .skip-link {
    position: absolute;
    left: -999px;
    top: auto;
    width: 1px;
    height: 1px;
    overflow: hidden;
  }
  .skip-link:focus {
    position: static;
    width: auto;
    height: auto;
    padding: 0.5rem 1rem;
    background: #000;
    color: #fff;
    z-index: 1000;
  }
</style>