---
import '../styles/global.css'
import Header from '../compositions/Header.astro'
import Footer from '../compositions/Footer.astro'
import { normalizeNeutralPath, getContentManifest, altLocalesFor, pathWithLocale, stripLangFromUrlOrId, getLangFromUrl, metaLoader, ogLocales, defaultLocale } from "@/i18n";

const lang = getLangFromUrl(Astro.url);
const meta = await metaLoader.getAsync(lang);
const siteName = meta.home.title;
const manifest = await getContentManifest();

const {
  pageTitle = siteName,
  description = `A page on ${siteName}`,
  ogType = 'website',
  ogImage,
} = Astro.props

const fullTitle = pageTitle.includes(siteName) ?
  pageTitle :
  `${siteName} - ${pageTitle}`;

const ogLocale = ogLocales[lang] ?? ogLocales[defaultLocale];
const base = Astro.site ?? Astro.url.origin;
const rawNeutral = stripLangFromUrlOrId(Astro.url.pathname);
const neutralPath = normalizeNeutralPath(rawNeutral);

const canonicalUrl = new URL(pathWithLocale(lang, neutralPath), base).href;
const xDefaultUrl = new URL(pathWithLocale(defaultLocale, neutralPath), base).href;

const altLocales = altLocalesFor(lang, neutralPath, manifest);
const alternates = altLocales.map((l) => ({
  hreflang: l,
  href: new URL(pathWithLocale(l, neutralPath), base).href,
  ogLocale: ogLocales[l],
}));

const robotsContent = import.meta.env.PROD ? 'index, follow' : 'noindex, nofollow';
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <!-- Canonical and Alternates -->
    <link rel="canonical" href={canonicalUrl} />
    <link rel="alternate" hreflang="x-default" href={xDefaultUrl} />
    {alternates.map((alt) => (
      <link rel="alternate" hreflang={alt.hreflang} href={alt.href} />
    ))}

    <!-- Basic SEO Defaults -->
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Open Graph Defaults -->
    <meta property="og:site_name" content={siteName} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:type" content={ogType} />
    <meta property="og:locale" content={ogLocale} />
    {alternates.map((alt) => (
      <meta property="og:locale:alternate" content={alt.ogLocale} />
    ))}
    <meta property="og:description" content={description} />
    {ogImage && <meta property="og:image" content={ogImage} />}

    <!-- Socials -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />

    <!-- Icons -->
    <!-- <link rel="icon" href="/favicon.ico" sizes="any" /> -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- <link rel="apple-touch-icon" href="/apple-touch-icon.png" /> -->

    <!-- PWA/UI -->
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" media="(prefers-color-scheme: light)" content="#f2e9d6">
    <meta name="theme-color" media="(prefers-color-scheme: dark)"  content="#0a0e19">
    <meta name="color-scheme" content="dark light">

    <!-- Optional Policies/Perf -->
    <meta name="referrer" content="strict-origin-when-cross-origin" />
    <meta name="robots" content={robotsContent} />
    <link rel="preload" href="/fonts/CormorantGaramond-VariableFont_wght.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/fonts/SourceSerif4-VariableFont_opsz,wght.woff2" as="font" type="font/woff2" crossorigin>

    <!-- Page Specific -->
    <slot name="head" />

    <!-- Auto -->
  </head>
  <body>
    <a href="#main" class="skip">Skip to main content</a>
    <Header />
    <main id="main" tabindex="-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<script is:inline>
  window.addEventListener('DOMContentLoaded', () => {
    const main = document.getElementById('main');
    if (main instanceof HTMLElement) main.focus();
  });
</script>