---
import type { PatchOptions } from "@/types/attributes";
import { buildElementProps } from "@/utils";

interface CardProps extends PatchOptions<"div"> {
  sizing: "fit-content" | "full";
  square?: boolean;
  height?: string;
  width?: string;
  backgroundColor?: string;
}

const {
  square,
  sizing = "full",
  height,
  width,
  backgroundColor,
  ...attributes
} = Astro.props as CardProps;

const built = buildElementProps<"div">({
  classList: ["card", sizing],
  styleList: [
    square && "aspect-ratio: 1 / 1",
    backgroundColor && `background-color: ${backgroundColor}`,
    height && `height: ${height}`,
    width && `width: ${width}`
  ].filter(Boolean),
  attributes
});
---

<div {...built}>
  <slot />
</div>

<style>
  .card {
    display: block;
    border-radius: var(--radius-sm);
    padding: var(--space-2);
    background-color: var(--bg-card);
    box-shadow: var(--shadow-1);
    overflow: hidden;
    max-width: 100%;
    overflow-wrap: anywhere;
    word-break: normal;
  }

  .fit-content {
    width: fit-content;
  }

  .full {
    width: 100%;
  }

  .card:focus-within {
    outline: 2px solid var(--focus-ring, Highlight);
    outline-offset: 2px;
  }

  @media (prefers-reduced-motion: reduce) {
    .card {
      transition: none;
    }
  }
</style>
