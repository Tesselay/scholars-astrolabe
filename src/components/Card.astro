---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"div"> {
  sizing?: "fit-content" | "full";
  square?: boolean;
  height?: string;
  width?: string;
  backgroundColor?: string;
}

const { square, sizing, height, width, backgroundColor, ...attributes } = Astro.props;

const classList = ["card", sizing, square && "square"];
---

<div class:list={[classList, attributes.class]} {...attributes}>
  <slot />
</div>

<style define:vars={{ "bg-card": backgroundColor, width, height }}>
  .square {
    aspect-ratio: 1 / 1;
  }

  .card {
    display: block;
    border-radius: var(--radius-sm);
    padding: var(--space-2);
    background-color: var(--bg-card);
    box-shadow: var(--shadow-1);
    overflow: hidden;
    max-width: 100%;
    overflow-wrap: anywhere;
    word-break: normal;

    height: var(--height, initial);
    width: var(--width, initial);
  }

  .fit-content {
    width: fit-content;
  }

  .full {
    width: 100%;
  }

  .card:focus-within {
    outline: 2px solid var(--focus-ring, Highlight);
    outline-offset: 2px;
  }

  @media (prefers-reduced-motion: reduce) {
    .card {
      transition: none;
    }
  }
</style>
