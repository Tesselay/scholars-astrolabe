---
import Navigation from './Navigation.astro'

import { useTranslations, getLangFromUrl, pathWithLocale } from "@/i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const homeUrl = pathWithLocale(lang, '/');
const folioUrl = pathWithLocale(lang, '/folio/');
const blogUrl = pathWithLocale(lang, '/blog/');
const contactUrl = pathWithLocale(lang, '/contact/');
---

<header>
  <nav aria-label="Primary">
    <ul class="nav-links">
      <li>
        <Navigation title={t('nav.home')} link={homeUrl} />
      </li>
      <li>
        <Navigation title={t('nav.portfolio')} link={folioUrl} />
      </li>
      <li>
        <Navigation title={t('nav.blog')} link={blogUrl} />
      </li>
      <li>
        <Navigation title={t('nav.contact')} link={contactUrl} />
      </li>
    </ul>
  </nav>
</header>

<style>
  .nav-links {
    display: flex;
    gap: 1rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }
</style>
